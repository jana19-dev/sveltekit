/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

body {
	height: 100vh;
	height: 100dvh;
	min-width: 360px;
}

::-webkit-scrollbar {
	width: 6px;
	height: 6px;
}

::-webkit-scrollbar-thumb {
	background: #93c5fd;
	border-radius: 10px;
}
* {
	scrollbar-width: thin;
	scrollbar-color: #93c5fd transparent;
}
